<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="40dp">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_row"
        android:layout_marginTop="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:id="@+id/alert_message_textView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/blackColor"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text=""
            android:id="@+id/alert_message_subText"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/grayColor"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alert_textField"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Key Name"
            android:textColorHint="@color/grayColorTinLight"
            android:textColor="@color/grayColor"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/alert_buttons_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/yes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/no_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/no"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:background="@drawable/rounded_button_red_fill"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>

        <ImageView
            android:id="@+id/actionbar_icon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/delete_log_icon"
            android:layout_gravity="center|top"
            android:scaleType="fitXY"/>

    </FrameLayout>

</RelativeLayout>